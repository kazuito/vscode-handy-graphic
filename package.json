{
  "name": "handy-graphic",
  "displayName": "Handy Graphic",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "HandyGraphic",
    "handy"
  ],
  "publisher": "kazuito",
  "repository": {
    "type": "git",
    "url": "https://github.com/kazuito/vscode-handy-graphic.git"
  },
  "icon": "icon.png",
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "handy-graphic.run",
        "title": "HandyGraphicを実行",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "when": "editorLangId == c || editorLangId == cpp",
          "command": "handy-graphic.run",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "Handy Graphic",
        "properties": {
          "handy-graphic.showTerminal": {
            "type": "boolean",
            "default": true,
            "description": "「HandyGraphicを実行」をした際にターミナルを表示する。"
          },
          "handy-graphic.saveAllFilesBeforeRun": {
            "type": "boolean",
            "default": true,
            "description": "実行が行われる前に、全てのファイルを保存する。"
          },
          "handy-graphic.command": {
            "type": "string",
            "default": "cd \"${dirAbsPath}\" && hgcc -Wall -o \"${fileNameWithoutExt}\" \"./${fileName}\" && \"./${fileNameWithoutExt}\"",
            "description": "コンパイル、実行を行うコマンド。"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  }
}
